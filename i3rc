# <clientclass>        <border> <backg> <text> <indicator>
client.focused          #849496 #859324 #000000  #268BD2
client.focused_inactive #849496 #B0BB72 #333333  #6C71C4
client.unfocused        #849496 #C1C48B #666666  #93A1A1
client.urgent           #849496 #613030 #AEC0C0  #CB4B16

# use the Windows key
set $mod Mod4

# use i3 in the WMII way:
workspace_layout stacking

# font for window titles (and for bar unless another font is set):
font pango:DejaVu Sans Mono 12

# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# kill focused window
bindsym $mod+Shift+c kill

# launcher
bindsym $mod+x exec dmenu_run -i -fn '-bitstream-*-*-*-*-*-16-*-*-*-*-*-*-*'

# change focus; you can also use the cursor keys:
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Left  focus left
bindsym $mod+Down  focus down
bindsym $mod+Up    focus up
bindsym $mod+Right focus right

# move focused window; you can also use the cursor keys:
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Shift+Left  move left
bindsym $mod+Shift+Down  move down
bindsym $mod+Shift+Up    move up
bindsym $mod+Shift+Right move right

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+a layout stacking
bindsym $mod+s layout splitv
bindsym $mod+d layout splith

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# toggle tiling / floating
bindsym $mod+w floating toggle

# change focus between tiling / floating windows
bindsym $mod+e focus mode_toggle

# focus the parent container
bindsym $mod+r focus parent

# focus the child container
bindsym $mod+t focus child

# cycling windows
bindsym $mod+Tab         focus down
bindsym $mod+Shift+Tab   focus up
bindsym $mod+grave       focus right
bindsym $mod+Shift+grave focus left

# switch workspace
bindsym $mod+comma            workspace prev
bindsym $mod+period           workspace next
bindsym $mod+Shift+comma      move container to workspace prev; workspace prev
bindsym $mod+Shift+period     move container to workspace next; workspace next
bindsym $mod+Ctrl+Left        workspace prev
bindsym $mod+Ctrl+Right       workspace next
bindsym $mod+Ctrl+Shift+Left  move container to workspace prev; workspace prev
bindsym $mod+Ctrl+Shift+Right move container to workspace next; workspace next

# back and forth (with/without active container)
workspace_auto_back_and_forth  yes
bindsym $mod+Escape            workspace back_and_forth
bindsym $mod+Shift+Escape      move container to workspace back_and_forth; workspace back_and_forth

# switch to workspace
bindsym $mod+1 workspace 1:ITNT
bindsym $mod+2 workspace 2:EDIT
bindsym $mod+3 workspace 3:TERM
bindsym $mod+4 workspace 4:FILE
bindsym $mod+5 workspace 5:VIEW

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1:ITNT
bindsym $mod+Shift+2 move container to workspace 2:EDIT
bindsym $mod+Shift+3 move container to workspace 3:TERM
bindsym $mod+Shift+4 move container to workspace 4:FILE
bindsym $mod+Shift+5 move container to workspace 5:VIEW

# exit i3 (logs you out of your X session)
bindsym $mod+Ctrl+Shift+BackSpace exec "i3-nagbar -t warning -m 'Do you want to quit i3?' -b 'Yes' 'i3-msg exit'"

# set resize mode  (you can also use the mouse to resize window)
bindsym $mod+z mode "resize"

# lock the screen: workspace 0; ...?
bindsym $mod+Shift+v exec "i3lock -d"

mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        bindsym Left  resize shrink width 10 px or 10 ppt
        bindsym Down  resize shrink height 10 px or 10 ppt
        bindsym Up    resize grow height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# auto floating
for_window [title="(?i)hangouts"]          floating enable
for_window [class="(?i)gimp"]              floating enable
for_window [class="(?i)wrapper"]           floating enable
for_window [class="(?i)xmessage"]          floating enable
for_window [instance="(?i)gcr-prompter"]   floating enable
for_window [window_type="(?i)dialog"]      floating enable
for_window [window_type="(?i)utility"]     floating enable
for_window [window_role="(?i)pop-up"]      floating enable
for_window [window_role="(?i)preferences"] floating enable

# auto workspacing
assign [class="(?i)firefox"]       1:ITNT
assign [class="(?i)google-chrome"] 1:ITNT
assign [class="(?i)emacs"]         2:EDIT
assign [class="(?i)gvim"]          2:EDIT
assign [class="(?i)konsole"]       3:TERM
assign [class="(?i)terminal"]      3:TERM
assign [class="(?i)dolphin"]       4:FILE
assign [class="(?i)okular"]        5:VIEW

# applications
bindsym $mod+Ctrl+1 exec google-chrome
bindsym $mod+Ctrl+2 exec emacs
bindsym $mod+Ctrl+3 exec konsole
bindsym $mod+Ctrl+4 exec dolphin
bindsym $mod+Ctrl+5 exec okular
bindsym $mod+Ctrl+Shift+1 [class="(?i)google-chrome"] focus
bindsym $mod+Ctrl+Shift+2 [class="(?i)emacs"]         focus
bindsym $mod+Ctrl+Shift+3 [class="(?i)konsole"]       focus
bindsym $mod+Ctrl+Shift+4 [class="(?i)dolphin"]       focus
bindsym $mod+Ctrl+Shift+5 [class="(?i)okular"]        focus

# volume control
bindsym $mod+F6 exec "amixer -D pulse sset Master 10%-"
bindsym $mod+F7 exec "amixer -D pulse sset Master  5%+"
bindsym $mod+F8 exec "pavucontrol"

# screen brightness
bindsym $mod+F9  exec "xrandr --output eDP-1 --brightness 0.8"
bindsym $mod+F10 exec "xrandr --output eDP-1 --brightness 1.2"

# more keybindings
bindsym $mod+Return           exec i3-sensible-terminal
bindsym XF86MonBrightnessUp   exec xbacklight -inc 5
bindsym XF86MonBrightnessDown exec xbacklight -dec 10
bindsym XF86AudioRaiseVolume  exec amixer set Master 5%+
bindsym XF86AudioLowerVolume  exec amixer set Master 10%-
#bindsym XF86AudioMute        exec amixer set Master toggle
#bindsym XF86MicMute          exec amixer set Capture toggle
bindsym XF86Sleep             exec gksudo pm-suspend
bindsym XF86PowerOff          exec gksudo pm-hibernate
bindsym Print exec "lximage-qt"

# start i3bar to display a workspace bar (plus the information i3status finds)
bar {
    status_command i3status
}

exec "xrandr --output eDP-1 --brightness 1.0"
exec "pactl set-sink-volume 0 '10%'"
exec "xsetroot -solid black -cursor_name left_ptr"
exec "xautolock -time 5 -locker i3lock -nowlocker i3lock"
exec "nm-applet"
exec "xmodmap ~/.Xmodmap"
